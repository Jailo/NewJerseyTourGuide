<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/root_view"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="@android:color/white">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:src="@drawable/iplay"
        android:id="@+id/image"
        android:scaleType="centerCrop"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="IPlay America"
        android:id="@+id/place_name"
        style="@style/PlaceName"
        android:layout_below="@id/image"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Indoor Theme Park"
        android:id="@+id/short_description"
        style="@style/ShortDescriptAndCity"
        android:layout_below="@id/place_name"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Freehold NJ"
        android:id="@+id/place_city"
        style="@style/ShortDescriptAndCity"
        android:layout_marginBottom="8dp"
        android:layout_below="@id/short_description"/>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_keyboard_arrow_right"
        android:layout_below="@id/place_name"
        android:layout_alignParentRight="true"/>

</RelativeLayout>