<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="@dimen/activity_horizontal_margin">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:src="@drawable/iplay"
        android:scaleType="centerCrop"
        android:id="@+id/info_image"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="IPlay America"
            android:id="@+id/place_name"
            style="@style/PlaceName"
            android:layout_below="@+id/info_image"/>


            <ImageView
                android:layout_width="28dp"
                android:layout_height="28dp"
                android:src="@drawable/baseline_place_black_48"
                android:scaleType="centerCrop"
                android:id="@+id/location_icon"
                android:layout_below="@+id/place_name"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="28dp"
                android:layout_centerVertical="true"
                android:text="2938.110 Schandk Rd Freewood, NJ"
                android:paddingLeft="@dimen/activity_horizontal_margin"
                android:gravity="center"
                android:id="@+id/address"
                android:maxLines="1"
                android:layout_toRightOf="@+id/location_icon"
                android:layout_below="@+id/place_name"/>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/location_icon"
        android:layout_above="@id/website">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="New Jersey's Premier Indoor Theme Park, with a full-service bar and grill alongside 200+ games, rides, attractions, laser tag, go karts and much more."
            android:id="@+id/description"
            style="@style/Description"
            android:layout_gravity="center_vertical"/>

    </LinearLayout>


            <ImageView
                android:id="@+id/website"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/baseline_public_black_48"
                android:layout_centerHorizontal="true"
                android:layout_above="@id/visit_website"
                android:layout_marginTop="16dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Visit Website"
                android:id="@+id/visit_website"
                android:layout_centerHorizontal="true"
                android:layout_alignParentBottom="true"/>


</RelativeLayout>